@{
    ViewData["Title"] = "ConfirEmail";
}

@section links{
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
}

    @if (ViewBag.IsVerified == true)
    {
        <div class="d-flex justify-content-center">
         <div class="alert alert-success w-75" role="alert">
             <span class="text-dark">Your email has been verified succesfully!</span>
         </div>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center">
          <div class="alert alert-danger w-75" role="alert">
             <span class="text-dark">Something went wrong or your token has been expired!</span>
         </div>   
         </div>
    }

