                                                }
                                            </div>
                                            <div class="ratings-container">
                                                <div class="ratings-full">
                                                    <span class="ratings" style="width:@(item.ReviewSum/item.ReviewCount)%"></span>
                                                    <span class="tooltiptext tooltip-top"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 mb-4">
                        <div class="widget widget-products appear-animate" data-animation-options="{
                                    'name': 'fadeInRightShorter',
                                    'delay': '.5s'
                                }">
                            <h4 class="widget-title border-no lh-1 font-weight-bold">Popular</h4>
                            <div class="products-col">
                                @foreach (var item in Model.Products.OrderByDescending(x => x.ReviewSum / x.ReviewCount).Take(3))
                                {
                                    <div class="product product-list-sm">
                                        <figure class="product-media">
                                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                                                <img src="~/images/products/@item.ProductImages.FirstOrDefault(x=>x.StatusImage==true).ImageUrl" alt="product"
                                                 width="100" height="114" style="background-color: #f2f3f5;" />
                                            </a>
                                        </figure>
                                        <div class="product-details">
                                            <h3 class="product-name">
                                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                                                    @item.Name
                                                </a>
                                            </h3>
                                            <div class="product-price">
                                                @if (item.DiscountPercent > 0)
                                                {
                                                    <ins class="new-price">@(item.InitialPrice-(item.InitialPrice*item.DiscountPercent/100))</ins>
                                                    <del class="old-price">@item.InitialPrice</del>
                                                }
                                                else
                                                {
                                                    <span class="price">@item.InitialPrice</span>
                                                }
                                            </div>
                                            <div class="ratings-container">
                                                <div class="ratings-full">
                                                    <span class="ratings" style="width:@(item.ReviewSum/item.ReviewCount)%"></span>
                                                    <span class="tooltiptext tooltip-top"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <div id="myModal" class="modal modal-fade" style="margin-top:70px;" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content w-100" style="border-radius:3%; padding:4%">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</main>

@section scripts{
    <script>
        $(document).ready(function() {
            $(document).on("click", ".btn-quickvieww", function(e) {
                e.preventDefault();
                let url = $(this).attr("href")
                getProduct(url)
            })
        })
        function getProduct(url) {
            $.ajax({
                type: "GET",
                url: url,
            }).done(function(res) {
                $(".modal-content").html(res)
                console.log(res)
            });
        }
    </script>
}