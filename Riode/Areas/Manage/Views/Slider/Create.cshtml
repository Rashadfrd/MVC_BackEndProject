@using Riode.Models
@{
    ViewData["Title"] = "Create";
}
<!-- Content -->
@model Slider
<form method="post" asp-controller="Slider" asp-action="Create">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span>Slider Create</h4>

        <div class="mb-3">
            <input class="form-control" type="file" id="formFile">
        </div>
        <!-- HTML5 Inputs -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="mb-3 row">
                    <label asp-for="Title" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Title" class="form-control" />
                    </div>
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="SubTitle" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="SubTitle" class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Description" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Description" class="form-control" />
                    </div>
                </div>
                <div class="col-md mb-3">
                    <label asp-for="Place" class="col-md-2 col-form-label"></label>
                    <div class="form-check form-check-inline mt-3">
                        <input class="form-check-input"  type="radio" name="Place" id="inlineRadio1" value="True">
                        <label class="form-check-label" for="inlineRadio1">Left</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Place" id="inlineRadio2" value="False">
                        <label class="form-check-label" for="inlineRadio2">Right</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Place" id="inlineRadio3" value="Null">
                        <label class="form-check-label" for="inlineRadio3">Middle</label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Order" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input class="form-control" asp-for="Order"/>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary btn-lg" type="submit">Submit</button>
        </div>
    </div>
</form>
<div class="content-backdrop fade"></div>

